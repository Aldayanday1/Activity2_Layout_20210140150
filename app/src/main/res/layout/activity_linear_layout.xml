<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinearLayout">

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="66dp"
      android:layout_height="60dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="44dp"
      android:layout_marginBottom="38dp"
      app:srcCompat="@drawable/logo_mercedes" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:orientation="horizontal">

    <Button
        android:id="@+id/button7"
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="1"
        android:text="Button 1"
        android:backgroundTint="#6f428c"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginHorizontal="16dp"
        android:layout_weight="1"
        android:text="Button 2"
        android:backgroundTint="#4d428c"/>
  </LinearLayout>

  <Button
      android:id="@+id/button9"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_marginHorizontal="16dp"
      android:layout_marginTop="18dp"
      android:layout_marginBottom="18dp"
      android:backgroundTint="#42738c"
      android:text="match parent" />

  <Button
      android:id="@+id/button3"
      android:layout_width="96dp"
      android:layout_height="54dp"
      android:layout_gravity="right"
      android:layout_marginRight="18dp"
      android:backgroundTint="#61798c"
      android:text="Right" />

  <Button
      android:id="@+id/button4"
      android:layout_width="96dp"
      android:layout_height="54dp"
      android:layout_marginLeft="18dp"
      android:layout_marginBottom="18dp"
      android:backgroundTint="#61798c"
      android:text="left" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="64dp"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      >

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:contentDescription="null"
        android:backgroundTint="#6f428c"
        android:layout_marginLeft="18dp"
        app:srcCompat="@android:drawable/ic_media_previous" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Select Your Starboy "
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:backgroundTint="#6f428c"
        android:contentDescription="null"
        android:layout_marginRight="18dp"
        app:srcCompat="@android:drawable/ic_media_next" />
  </LinearLayout>

</LinearLayout>